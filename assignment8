public class ThongtinSV {
	String ten;
	double dToan;
        double dLy;
	double dHoa;
	public ThongtinSV(int hoa, int ly, int toan) {
		this.dHoa = hoa;
		this.dLy = ly;
		this.dToan = toan;
		double average = (hoa + ly + toan) / 3;
		System.out.println("diem trung binh : " + average);
		String dtb = "yeu";
	    if(average >= 9){
	    	dtb = "xuat sac";
	    }else if (average >= 8){
	        dtb = "gioi";
	    }else if (average >= 7){
	        dtb = "kha";
	    }
		System.out.println("xin chuc minh ban xep loai: " + dtb);
